<%= form_with(model: [@subject, @course, homework]) do |form| %>
  <div class="field-label col-xl-6">
      <%= form.label :entry %>
  </div>

  <div class="field col-xl-6">
      <%= form.text_area :entry %>
  </div>

  <div class="field-label col-xl-6">
      <%= form.label :due_at %>
  </div>

  <div class="field col-xl-6">
      <%= form.datetime_select :due_at %>
  </div>

  <div class="actions col-xl-6">
      <%= form.submit %>
  </div>
<% end %>
