<div class="container-fluid px-4">
  <p id="notice"><%= notice %></p>

  <h1 class="mt-4"><%= @course.name %></h1>

  <div class="row">
      <div class="col-xl-6">
          <div class="card mb-4">
              <div class="card-header">
                  <i class="fas fa-edit me-1"></i>
                  Notes
              </div>
              <div class="card-body">
                  <%= render @course.notes %>
              </div>
          </div>
      </div>
      <div class="col-xl-6">
          <div class="card mb-4">
              <div class="card-header">
                  <i class="fas fa-th-list me-1"></i>
                  Homework Assignments
              </div>
              <div class="card-body">
                  <%= render @course.homeworks %>
              </div>
          </div>
      </div>
  </div>

  <div class="row">
      <div class="col-xl-6">
          <div class="mb-4">
              <div>
                  <strong>Add a note</strong>
              </div>
              <div>
                <%= render partial: "notes/form", locals: {note: @course.notes.new} %>
              </div>
          </div>
      </div>
      <div class="col-xl-6">
          <div class="mb-4">
              <div>
                  <strong>Add a homework assignment</strong>
              </div>
              <div>
                <%= render partial: "homeworks/form", locals: {homework: @course.homeworks.new} %>
              </div>
          </div>
      </div>
  </div>

  <%= link_to 'Edit', edit_subject_course_path(@subject, @course) %> |
  <%= link_to 'Back', @subject %>
</div>