<%= form_with(model: [@subject, course], :html => {:class => 'flex-container-2'}) do |form| %>
  <div class="field-label">
    <%= form.label :name %>
  </div>

  <div class="field">
    <%= form.text_field :name, :class => "form-control" %>
  </div>
  <br />

  <div class="actions">
    <%= form.submit :class => "btn btn-primary" %>
  </div>
<% end %>