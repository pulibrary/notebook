<div class="container-fluid px-4">
  <p id="notice"><%= notice %></p>

  <h1 class="mt-4"><%= @subject.name %></h1>

  <table>
    <thead>
      <tr>
        <th>Course Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <%= render @subject.courses %>
    </tbody>
  </table>

  <br />

  <table>
    <thead>
      <tr>
        <th>Add a course</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <tr>
            <%= render partial: "courses/form", locals: {course: @subject.courses.new} %>
        </tr>
    </tbody>
  </table>

  <br />

  <%= link_to 'Edit', edit_subject_path(@subject) %> |
  <%= link_to 'Back', subjects_path %>
</div>